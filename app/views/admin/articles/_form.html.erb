<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :tag_list, input_html: { value: @article.tag_list.blank? ? '夜市经验,柳州夜市摆地摊技巧' : @article.tag_list} %>
    <%= f.input :title %>
    <%= f.input :status, collection: ['padding', 'published', 'trash'], include_blank: false %>
    <%#= f.input :published_at, as: :datetime %>
    <%= f.input :content, :as => :kindeditor, :label => false, :input_html => { :width => 800, :height => 300 } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>

<%= button_to '发布', publish_article_path(@article), class: 'btn btn-info' if !@article.new_record? and @article.status == 'padding' %>
