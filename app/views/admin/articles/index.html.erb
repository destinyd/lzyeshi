<h1>Listing articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Status</th>
    <th>Published at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= link_to article.title, article %></td>
    <td><%= article.status %></td>
    <td><%= article.published_at %></td>
    <td><%= link_to '真实页', article_url(article, subdomain: ENV['SUBDOMAIN']) %></td>
    <td><%= link_to '修改', edit_article_path(article) %></td>
    <td><%= link_to '删除', article, method: :delete, data: { confirm: '你确定?' } %></td>
  </tr>
<% end %>
</table>

