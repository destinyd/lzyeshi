<%= simple_form_for(@ad) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :url %>
    <%= f.input :content, as: :text %>
    <%= f.input :type, as: :select, collection: Ad.types %>
    <%= f.input :image %>
    <%= f.input :finished_at %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
