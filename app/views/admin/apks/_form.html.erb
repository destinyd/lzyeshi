<%= simple_form_for(@apk) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :english_name %>
    <%= f.input :version %>
    <%= f.input :update_info, as: :text, input_html: {class: :wysihtml5} %>
    <%= f.input :order %>
    <%= f.input :apk %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
