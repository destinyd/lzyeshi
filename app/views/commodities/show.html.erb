<h1><%= title @commodity.name %></h1>
<%= content_tag :dl,class: 'dl-horizontal' do %>
  <dt>
  商家
  </dt>
  <dd>
  <%= link_to @commodity.trader, @commodity.trader %>
  <%= link_to new_commodity_chat_message_url(@commodity, chat_message: {name: @commodity.try(:user).try(:name) || @commodity.try(:trader).try(:user).try(:name)}, subdomain: ENV['USER_SUBDOMAIN']), target: '_blank' do %>
    <%= image_tag "chat_32x32.png", title: "联系#{@commodity}", alt: "联系#{@commodity}" %>
    <% end -%>
  </dd>
  <%= d @commodity,:price %>
  <%= d @commodity,:reserve %>
  <dt>大图</dt>
  <dd>
  <%= image_tag @commodity.picture.image.url,class: 'commodity_image' %>
  </dd>
  <%#= d @commodity,:text %>
  <dt>其他款式</dt>
  <dd>
  <ul class="groups_ul inline">
    <% @commodity.group.commodities.each do |commodity| %>
      <li>
        <%= link_to commodity do %>
          <%= image_tag commodity.picture.image.thumb, class: commodity == @commodity ? 'commodity_select' : 'commodity_unselect' %>
        <% end -%>
      </li>
    <% end -%>
  </ul>
  <div class="clearfix"></div>
  </dd>

  <%= render "application/share_in_dl" %>

  <% @comments = @commodity.comments.recent.page(params[:comment_page]) %>
  <dt>我也来说两句</dt>
  <dd><%= render "comments/form", parent: @commodity, comment: @commodity.comments.new, any_comments: @comments.any? %></dd>
  <dt>评论</dt>
  <dd>
    <div id="div_comments">
      <%= render 'comments/comments', comments: @comments, parent: @commodity %>
    </div>
  </dd>
<% end -%>
