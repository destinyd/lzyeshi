<div class="panel panel-default" id="<%= @topic.id %>" id="replies">
  <div class="panel-heading">
    共收到<%= @topic.replies.count %>条回复
  </div>
  <div class="panel-body">
    <%= simple_form_for [@topic,@topic.replies.new] do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :body %>
      </div>

      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end -%>
  </div>
</div>
