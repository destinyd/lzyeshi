<%= render "layouts/before" %>
<div class="row">
  <div class="span12">
    <%= render 'layouts/messages' %>
    <div class="mb10">
      <%= render 'layouts/ad_top' %>
    </div>

    <div class="breadcrumb">
      <%= render_crumbs separator: ' > ' %>
    </div>
  </div>
</div>

<div class="row">
  <div class="span8">
    <%= yield %>
  </div>

  <div class="span4">
    <%= yield(:sidebar) %>
    <%= render 'layouts/ad_sidebar_first' %>
    <%= render_cell :sidebars, :recent_commodities %>
    <%= render 'layouts/ad_sidebar_second' %>
    <%= render_cell :sidebars, :recent_comments %>
    <%= render_cell :sidebars, :listen %>
  </div>
</div>
<%= render "layouts/after" %>
