<h1><%= title "夜市经验 #{"标签:" + params[:tag] unless params[:tag].blank?} 第#{params[:page] || 1}页" %></h1>

<table class="table table-hover">
  <tr>
    <th class="col-md-9 col-lg-9">标题</th>
    <th class="col-md-3 col-lg-3">发布于</th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td class="col-md-9 col-lg-9"><%= link_to article.title, article %></td>
    <td class="col-md-3 col-lg-3"><%= article.published_at.try(:cc_time) %></td>
  </tr>
<% end %>
</table>

<div class="clearfix"></div>
<div class="pull-right">
  <%= paginate @articles %>
</div>
<div class="clearfix"></div>

