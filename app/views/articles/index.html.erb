<h1>文章列表</h1>

<table class="table table-hover">
  <tr>
    <th class="span9">标题</th>
    <th class="span3">发布于</th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td class="span9"><%= link_to article.title, article %></td>
    <td class="span3"><%= article.published_at.try(:cc_time) %></td>
  </tr>
<% end %>
</table>
