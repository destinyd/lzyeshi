<% if section.nodes.any? %>
<div class="panel panel-default">
  <div class="panel-heading">
    <%= link_to section.name, section %>
  </div>
  <div class="panel-body">
    <% section.sorted_nodes.each do |node| %>
      <div class="col-md-4 col-lg-3 node">
        <dl>
          <dt class="node-dt"><%= link_to node.name.block(25), node %></dt>
          <dd>贴子数：<em><%= node.topics.count %></em></dd>
        </dl>
        <!--<h3><%= link_to node.name, node %></h3>
         <div class="desc">
          <%= node.summary.html_safe %>
        </div>-->
      </div>
    <% end -%>
  </div>
</div>
<% end -%>
