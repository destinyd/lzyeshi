<h1><%= title @topic.title %></h1>
<div class="">
  <%= @topic.body.html_safe %>
</div>
<% @topic.replies.each do |reply| %>
  <div class="">
    <%= reply.body.html_safe %>
  </div>
<% end -%>
<div class="">
  <%= simple_form_for [@topic,@topic.replies.new] do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :body %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end -%>
</div>
