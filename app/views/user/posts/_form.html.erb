<% @post.build_picture if @post.picture.blank? %>
<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :price %>
    <%= f.simple_fields_for :picture do |fs| %>
      <%= fs.input :image,label: t('attributes.image') %>
    <% end -%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
